{
  "name": "nuvla-ui",
  "description": "Web application for Nuvla, a cloud and edge application management platform.",
  "repository": "https://github.com/nuvla/ui",
  "version": "1.0.0",
  "main": "resources/nuvla-ui.js",
  "scripts": {
    "dev": "./node_modules/.bin/shadow-cljs watch nuvla-ui",
    "build": "./node_modules/.bin/shadow-cljs compile nuvla-ui",
    "release": "./node_modules/.bin/shadow-cljs release nuvla-ui",
    "clean": "rm -rf resources/public/js/* && rm -rf target",
    "test:components": "playwright test --config=portfolio/playwright.config.ts --project=chromium",
    "test:components:headed": "playwright test --config=portfolio/playwright.config.ts --project=chromium --headed",
    "test:components:all": "playwright test --config=portfolio/playwright.config.ts",
    "test:components:ci": "CI=true npx concurrently -k -s first -n \"PORTFOLIO,TEST\" -c \"magenta,blue\" \"lein serve\" \"npx wait-on tcp:127.0.0.1:8281 && npm run test:components:all\"",
    "test:components:ci:update-snapshots": "CI=true npx concurrently -k -s first -n \"PORTFOLIO,TEST\" -c \"magenta,blue\" \"lein serve\" \"npx wait-on tcp:127.0.0.1:8281 && npm run test:components:all -- --update-snapshots --workers=1\"",
    "test:components:watch": "chokidar 'test/component/*.{spec,test}.{js,ts}' -c 'npm run test:components -- --retries=0 {path}'",
    "test:e2e:gen": "playwright codegen",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:watch": "chokidar 'test/**/*.{spec,test}.{js,ts}' -c 'npm run test:e2e -- --retries=0 {path}'",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed",
    "test:e2e:headed:watch": "chokidar 'test/**/*.{spec,test}.{js,ts}' -c 'npm run test:e2e:headed -- --retries=0 {path}'",
    "test:unit": "./node_modules/.bin/shadow-cljs compile test && karma start --single-run"
  },
  "author": "SixSq SA",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nuvla/ui/issues"
  },
  "homepage": "https://github.com/nuvla/ui",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/node": "^18.16.12",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.0",
    "karma": "^6.4.1",
    "karma-chrome-launcher": "^3.1.1",
    "karma-cljs-test": "^0.1.0",
    "mockdate": "^3.0.5",
    "playwright": "^1.27.1",
    "shadow-cljs": "^2.17.8",
    "snabbdom": "3.5.1",
    "source-map-support": "^0.5.19"
  },
  "dependencies": {
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.1.0",
    "@codemirror/language": "^6.6.0",
    "@codemirror/legacy-modes": "^6.3.1",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@stripe/react-stripe-js": "^2.1.0",
    "@stripe/stripe-js": "^1.54.0",
    "@uiw/react-codemirror": "^4.19.9",
    "bluebird": "^3.7.2",
    "chart.js": "^3.9.1",
    "chartjs-adapter-date-fns": "^3.0.0",
    "codemirror": "^6.0.1",
    "date-fns": "^2.30.0",
    "diff": "^5.0.0",
    "highlight.js": "^11.5.1",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "leaflet-draw": "^1.0.4",
    "qrcode.react": "^3.1.0",
    "react": "^17.0.2",
    "react-chartjs-2": "^4.3.1",
    "react-copy-to-clipboard": "^5.1.0",
    "react-datepicker": "^4.13.0",
    "react-diff-viewer-continued": "^3.2.6",
    "react-dom": "^17.0.2",
    "react-intercom": "^1.0.15",
    "react-leaflet": "^2.8.0",
    "react-leaflet-draw": "^0.19.0",
    "react-markdown": "^6.0.2",
    "react-popper": "^2.3.0",
    "semantic-ui-css": "^2.5.0",
    "semantic-ui-react": "^2.1.4",
    "wellknown": "^0.5.0"
  }
}
