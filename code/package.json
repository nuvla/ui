{
  "name": "nuvla-ui",
  "description": "Web application for Nuvla, a cloud and edge application management platform.",
  "repository": "https://github.com/nuvla/ui",
  "version": "1.0.0",
  "main": "resources/nuvla-ui.js",
  "scripts": {
    "dev": "./node_modules/.bin/shadow-cljs watch nuvla-ui",
    "build": "./node_modules/.bin/shadow-cljs compile nuvla-ui",
    "release": "./node_modules/.bin/shadow-cljs release nuvla-ui",
    "clean": "rm -rf resources/public/js/* && rm -rf target",
    "test:e2e:gen": "playwright codegen",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:watch": "chokidar 'tests/**/*.{spec,test}.{js,ts}' -c 'npm run test:e2e -- --retries=0 {path}'",
    "test:e2e:headed": "playwright test --config=playwright.config.ts --headed true",
    "test:e2e:headed:watch": "chokidar 'tests/**/*.{spec,test}.{js,ts}' -c 'npm run test:e2e:headed -- --retries=0 {path}'"
  },
  "author": "SixSq SA",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nuvla/ui/issues"
  },
  "homepage": "https://github.com/nuvla/ui",
  "devDependencies": {
    "@playwright/test": "^1.27.1",
    "@types/node": "^18.11.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.0.3",
    "playwright": "^1.27.1",
    "shadow-cljs": "^2.17.8",
    "source-map-support": "^0.5.19"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^1.7.0",
    "@stripe/stripe-js": "^1.24.0",
    "bluebird": "^3.7.2",
    "chart.js": "^2.3.0",
    "codemirror": "^5.61.1",
    "diff": "^5.0.0",
    "highlight.js": "9.18.1",
    "js-yaml": "^4.1.0",
    "jszip": "^3.6.0",
    "leaflet": "^1.7.1",
    "leaflet-draw": "^1.0.4",
    "moment": "^2.29.1",
    "qrcode.react": "^1.0.1",
    "react": "16.14.0",
    "react-chartjs-2": "2.11.2",
    "react-codemirror2": "^7.2.1",
    "react-copy-to-clipboard": "^5.0.3",
    "react-datepicker": "^1.8.0",
    "react-diff-viewer": "^3.1.1",
    "react-dom": "16.14.0",
    "react-highlight.js": "1.0.7",
    "react-intercom": "^1.0.15",
    "react-leaflet": "^2.8.0",
    "react-leaflet-draw": "^0.19.0",
    "react-markdown": "^6.0.2",
    "react-popper": "2.2.5",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "wellknown": "^0.5.0"
  }
}
